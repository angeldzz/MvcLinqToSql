@model ResumenEmpleados

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Filtrar Empleados</h5>
                    <form method="post">
                        <div class="mb-3">
                            <label for="oficio" class="form-label">Introduzca Oficio:</label>
                            <select class="form-select form-select-lg" name="oficio" id="oficio" aria-label="Seleccionar oficio">
                                <option value="">-- Seleccionar Oficio --</option>
                                @foreach (string oficio in ViewBag.OFICIO as List<string>)
                                    {
                                        <option value="@oficio">@oficio</option>
                                    }
                                </select>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Enviar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null)
    {
        <h2 class="mb-4">Resumen de Empleados</h2>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h6 class="card-title">Total de Personas</h6>
                        <h3 class="card-text">@Model.Personas</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h6 class="card-title">Salario Máximo</h6>
                        <h3 class="card-text">@Model.MaximoSalario.ToString("C")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h6 class="card-title">Salario Medio</h6>
                        <h3 class="card-text">@Model.MediaSalarial.ToString("C")</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Oficio</th>
                        <th class="text-end">Salario</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var empleado in Model.Empleados)
                    {
                        <tr>
                            <td>@empleado.Apellido</td>
                            <td>@empleado.Oficio</td>
                            <td class="text-end">@empleado.Salario.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No se encontraron empleados con los criterios especificados.
        </div>
    }
</div>