@model List<Empleado>
<h1>Buscador Empleados Linq</h1>
<form method="post">
    <label for="nombre">Oficio: </label>
    <input type="text" id="oficio" name="oficio" class="form-control"/>
    <label>Salario: </label>
    <input type="number" id="salario" name="salario" class="form-control" />
    <button type="submit" class="btn btn-primary">Buscar Empleados</button>
</form>

@if (Model != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
            </tr
        </thead>
        <tbody>
            @foreach (Empleado empleado in Model)
            {
                <tr>
                    <td>@empleado.Apellido</td>
                    <td>@empleado.Oficio</td>
                    <td>@empleado.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger">No se encontraron empleados.</p>
}